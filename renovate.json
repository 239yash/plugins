{
  "extends": [
    "config:base",
    "schedule:monthly",
    ":combinePatchMinorReleases",
    ":disablePeerDependencies",
    ":label(topic: automation)"
  ],
  "major": {
    "masterIssueApproval": true
  },
  "additionalBranchPrefix": "{{#if parentDir}}{{parentDir}}{{else}}repo{{/if}}-",
  "masterIssue": true,
  "rangeStrategy": "bump",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "non-major dependency versions"
    },
    {
      "matchPackagePatterns": ["^@babel/", "^babel"],
      "groupName": "build tooling updates",
      "groupSlug": "all",
      "semanticCommitScope": "all-build-deps"
    },
    {
      "groupName": "integration test updates",
      "matchPaths": ["integration-tests/**"],
      "groupSlug": "all-tests",
      "semanticCommitScope": "integration-test-deps"
    }
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "{{#if parentDir}}{{parentDir}}{{else}}repo{{/if}}",
  "ignoreDeps": ["node"]
}
